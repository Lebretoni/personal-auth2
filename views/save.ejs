<!doctype html>
<html>
<head>
    <title></title>
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/bootstrap/3.0.2/css/bootstrap.min.css">
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.min.css">
    <link rel="stylesheet" href="style.css">
      <script src="https://kit.fontawesome.com/077191d827.js" crossorigin="anonymous"></script>
</head>
<body>
  <h1></h1>
<div class="container">
    <div class="page-header text-center">
        <!-- <h1><span class="fa fa-anchor"></span>Stay Healthy Profile Page</h1> -->
        <h1>Order your Exotic car page</h1>
        <a href="/logout" class="btn btn-default btn-sm">Logout</a>

    </div>
    <div class="row">
        <!-- LOCAL INFORMATION -->
        <div class="col-sm-6">
            <div class="well">
                <h3><span class="fa fa-user"></span> Local</h3>
                <% if (user.local.email) { %>
                    <p>
                        <strong>id</strong>: <%= user._id %><br>
                        <strong>email</strong>: <%= user.local.email %><br>
                        <strong>password</strong>: <%= user.local.password %>
                    </p>
                    <a href="/unlink/local" class="btn btn-default">Unlink</a>
                <% } else { %>
                    <a href="/connect/local" class="btn btn-default">Connect Local</a>
                <% } %>
            </div>
        </div>
        <div class="col-sm-6">
          <h3>Ordered cars</h3>
          <ul class="messages">
          <% for(var i=0; i<messages.length; i++) {%>
            <% if (messages[i].like === "save") { %>
            <li class="message">
              <span class="hide3"><%= messages[i].name %></span>
              <span><%= messages[i].msg %></span>
              <span><%= messages[i].thumbUp %></span>
              <span><i class="fas fa-shopping-cart" aria-hidden="true"></i></span>
              <span class="hide2"><i class="fa fa-thumbs-down" aria-hidden="true"></i></span>
              <span><i class="fa fa-trash" aria-hidden="true"></i></span>
            </li>
          <% } %>
            <% } %>
          </ul>
          <h2>Add a car</h2>
        <% if (user.local.email) { %>
          <form action="/messages" method="POST">
            <input class="hide" type="text" value="<%= user.local.email %>" name="name">
            <input type="text" placeholder="car" name="msg">
            <input type="text" placeholder="color" name="msg">
                <input type="text" placeholder="year" name="msg">
            <button type="submit">Submit</button>
          </form>
        </div>
        <% } %>
        <a href="/profile"> <button type="button" name="button">go to profile</button> </a>
</div>
<script src="main.js"></script>
</body>

</html>
